
<%= simple_form_for([@user, @goal, @milestone], url: user_goal_starting_point_path, :method => :post, html: { class: 'form-horizontal', role: 'form' }) do |f| %>
  <% if @milestone.errors.any? %>
    <div id="error_explanation">
      <h2><%= @milestone.errors.count %> Problem(e) entdeckt:</h2>

      <ul>
        <% @milestone.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :id, :as => :hidden %>
  <%= f.association :type, :as => :hidden %>
  <%= f.input :is_first, :as => :hidden %>

  <div class="form-group">
    <%= f.label :value, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.input :value, :as => :float, label: false, input_html: { class: 'form-control', value: @milestone.try(:value) } %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :achieved_at, 'Gestartet am', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.input :achieved_at, label: false, input_html: { class: 'form-control' } %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
<% end %>