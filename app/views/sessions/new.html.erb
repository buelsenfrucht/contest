<div class="row">

  <div class="col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8 col-xs-12">

    <div class="subtitle">Anmeldung</div>

    <%= form_tag sessions_path, class: 'form-horizontal', role: 'form' do %>

      <div class="form-group">
        <%= label_tag :email, nil, class: 'col-sm-4 control-label' %>
        <div class="col-sm-8">
          <%= text_field_tag :email, params[:email], class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= label_tag :password, nil, class: 'col-sm-4 control-label' %>
        <div class="col-sm-8">
          <%= password_field_tag :password, nil, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
          <%= submit_tag 'Einloggen', class: 'btn btn-primary btn-lg btn-block' %>
        </div>
      </div>
    <% end %>

  </div>

</div>