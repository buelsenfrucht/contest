<%= link_to 'Neuer Meilenstein', new_user_milestone_path(@user), class: 'btn btn-primary btn-lg' %><br /><br />

<h1>Meine Meilensteine</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Datum</th>
      <th>Typ</th>
      <th>Wert</th>
      <th style="width: 90px; text-align: center;"></th>
    </tr>
  </thead>

  <tbody>
    <% @milestones.each do |milestone| %>
      <tr>
        <td><%= link_to l(milestone.achieved_at), edit_user_milestone_path(@user, milestone) %></td>
        <td>
          <% if @goals_by_type[milestone.type_id] %>
            <%= @goals_by_type[milestone.type_id] %>
          <% else %>
            <%= milestone.type %>
          <% end %>
        </td>
        <td><%= milestone.value %></td>
        <td style="text-align: center;">
          <%= link_to user_milestone_path(@user, milestone), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' do %>
            <span class="glyphicon glyphicon-trash"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
