<%= simple_form_for([@user, @activity], html: { class: 'form-horizontal activity-form', role: 'form' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.label :body, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.input :body, label: false, input_html: { class: 'form-control' } %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :publish, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.input :publish, label: false %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :created_at, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.input :created_at, label: false, :as => :date, input_html: { class: 'form-control' } %>
    </div>
  </div>

  <div class="form-group well">
    <div class="col-sm-12">
      <%= f.submit class: 'btn btn-primary btn-lg' %>
    </div>
  </div>

<% end %>
